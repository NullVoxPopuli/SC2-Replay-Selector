<% @players.each do |player| %>
  <tr>
    <td><%= player.english_name %></td>
    <td><%= player.real_name %></td>
    <td><%= player.age %></td>
    <td><%= player.country ? player.country.name : " - Alien - " %></td>
    <td><%= player.team ? player.team.abbreviation : "Unaffiliated" %></td>
    <td><%= player.featured ? "Yes" : "No" %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

